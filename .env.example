# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=sqlite:///property_tool.db

# Secret Key (Generate a new one for production!)
SECRET_KEY=your-secret-key-here-generate-new-one

# API Keys (Keep these secure!)
REGRID_API_TOKEN=your-regrid-api-token-here
SMARTY_AUTH_ID=your-smarty-auth-id-here
SMARTY_AUTH_TOKEN=your-smarty-auth-token-here
MELISSA_LICENSE_KEY=your-melissa-license-key-here

# Security Settings
FLASK_ENV=production
FORCE_HTTPS=true
SESSION_TIMEOUT_HOURS=8

# Rate Limiting
DEFAULT_RATE_LIMIT=100 per hour
LOGIN_RATE_LIMIT=10 per minute
REGISTER_RATE_LIMIT=5 per minute
API_RATE_LIMIT=30 per minute

# File Upload Security
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=json,csv,xlsx

# Logging
LOG_LEVEL=INFO
LOG_FILE=security.log